<% layout('./layouts/boilerplate') %>
<div id="map" style="width:100%; height:500px;"></div>

    <h1>All the campground</h1>
    
    <% for (let campground of campgrounds ) { %>
        <div class="card mb-3">    
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.images[0].url %>">
                </div>
                <div class="col-md-8">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <!-- <div class="card-title"><%= campground.properties.popUpMarkup %> </div> -->
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text text-muted"><%= campground.location %></p>
                    <a href="/campground/<%= campground.id %>" class="btn btn-primary d-inline "><%= campground.title %></a>
                </div>
            </div>
        </div>
    <% } %>
    <script>
        const maptoken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds ={features:<%- JSON.stringify(campgrounds) %>} 
    </script>
