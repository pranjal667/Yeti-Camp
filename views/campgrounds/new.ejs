<% layout('./layouts/boilerplate') %>

<div class="row">
    <form class = "col-md-6 offset-3 needs-validation" novalidate action="/campground" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="Title" name='title'aria-describedby="emailHelp"required>
            <div class="invalid-feedback">
              Please enter the required title !
            </div>
            <div class="valid-feedback">
              Looks Nice !
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" name='location' id="exampleInputPassword1"required>
            <div class="invalid-feedback">
              Please enter the required Location !
            </div>
            <div class="valid-feedback">
              Looks Nice !
            </div>
          </div>
          
          
           <div class="mb-3">
            <label class="form label" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price">@</span>
                <input type="text" name='price' class="form-control" placeholder="0.00" aria-label="Price" aria-describedby="price"required>
                <div class="invalid-feedback">
                  Please enter the required price !
                </div>
                <div class="valid-feedback">
                  Looks Nice !
                </div>
            </div>   
            
          </div>
           <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name='description' id="description" rows="3" required></textarea>
            <div class="invalid-feedback">
              Please enter the required description !
            </div>
            <div class="valid-feedback">
              Looks Nice !
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Insert Images(S)...</label>
              <input class="form-control" type="file" name='image' id="image" multiple>
            
            <div class="invalid-feedback">
              Please enter the  required imageurl !
            </div>
            <div class="valid-feedback">
              Looks Nice !
            </div>
          </div>
        </div>
          <button type="submit" class="btn btn-success">Add Campground</button>
    </form>
</div>    
